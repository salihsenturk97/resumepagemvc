<div class="resume-section-content">
  <form method="post" novalidate>  <h2 class="mb-5">İletişim</h2>

    <div class="form-group">  <label for="fullname">Ad Soyad</label>
      <input type="text" class="form-control" id="fullname" name="fullname" required>  </div>

    <div class="form-group">
      <label for="email">Mail</label>
      <input type="email" class="form-control" id="email" name="email" required>  </div>

    <div class="form-group">
      <label for="subject">Konu</label>
      <input type="text" class="form-control" id="subject" name="subject" required>  </div>

    <div class="form-group">
      <label for="message">Mesaj</label>
      <textarea class="form-control" id="message" name="message" rows="5" required></textarea>  </div>

    <button type="submit" class="btn btn-info">Mesaj Gönder</button>
  </form>
</div>

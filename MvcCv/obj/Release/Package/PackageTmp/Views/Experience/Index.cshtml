@using MvcCv.Models.Entity
@model List<experience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Deneyim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.title</td>
            <td>@item.subtitle</td>
            <td>@item.description</td>
            <td>@item.date</td>
            <td>
                <a class="btn btn-danger btn sm" href="/Experience/DeleteExperience/@item.ID">
                    <i class="fas fa-trash-alt">
                    </i>
                    Sil
                </a>
            </td>
            <td>
                <a class="btn btn-info btn sm" href="/Experience/GetExperience/@item.ID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
            </td>
        </tr>
    }

</table>

<a href="/Experience/AddExperience" class="btn btn-primary">Yeni Deneyim Ekle</a>


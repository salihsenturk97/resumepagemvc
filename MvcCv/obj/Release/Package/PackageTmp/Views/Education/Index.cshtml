@using MvcCv.Models.Entity
@model List<education>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Eğitim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık 2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.title</td>
            <td>@item.subtitle1</td>
            <td>@item.subtitle2</td>
            <td>@item.GNO</td>
            <td>@item.date</td>
            <td>
                <a class="btn btn-danger btn sm" href="/Education/DeleteEducation/@item.ID">
                    <i class="fas fa-trash-alt">
                    </i>
                    Sil
                </a>
            </td>
            <td>
                <a class="btn btn-info btn sm" href="/Education/UpdateEducation/@item.ID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
            </td>
        </tr>
    }

</table>

<a href="/Education/AddEducation" class="btn btn-primary">Yeni Eğitim Ekle</a>


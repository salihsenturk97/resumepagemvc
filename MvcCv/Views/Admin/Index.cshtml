@using MvcCv.Models.Entity
@model List<admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Admin İşlemleri</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Düzenle</th>
        <th>Kaldır</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.username</td>
            <td>
                <a class="btn btn-info btn sm" href="/Admin/UpdateAdmin/@item.ID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
            </td>
            <td>
                <a class="btn btn-danger btn sm" href="/Admin/DeleteAdmin/@item.ID">
                    <i class="fas fa-trash-alt">
                    </i>
                    Sil
                </a>
            </td>

        </tr>
    }

</table>

<a href="/Admin/AddAdmin" class="btn btn-primary">Admin Ekle</a>

